<Window x:Class="final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:final"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="text" Width="300" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
            <Button Content="→" Height="30" Width="50" Click="Button_Click"></Button>
            <TextBox x:Name="ans" Width="300" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
        </StackPanel>
    </Grid>
</Window>
